<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".TabTin"
    android:weightSum="1">


    <ViewAnimator
        android:id="@+id/viewanimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:drawable/screen_background_light">


        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="389dp"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:background="@drawable/border">

                <FrameLayout
                    android:layout_width="117dp"
                    android:layout_height="86dp"
                    android:layout_marginBottom="1dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@android:color/background_light"
                        android:elevation="7dp"
                        android:text="@string/screenshot"
                        android:textColor="@color/colorAccent" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="AddPic"
                        app:backgroundTint="@color/colorAccent"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/ic_menu_camera" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/imgView"
                    android:layout_width="379dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_weight="0.57"
                android:background="@drawable/border"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_marginBottom="1dp"
                    android:elevation="7dp">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="74dp"
                        android:clickable="true"
                        android:onClick="recordVideo"
                        app:fabSize="mini"
                        app:srcCompat="@android:drawable/presence_video_busy" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@android:color/background_light"
                        android:elevation="8dp"
                        android:text="@string/record_screen"
                        android:textColor="@color/colorAccent" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="100dp">

                    <VideoView
                        android:id="@+id/videoView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:focusable="false" />
                </FrameLayout>

            </LinearLayout>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:checked="false"
                android:onClick="switchOn3"
                android:text="@string/ShareLocation"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issue Description->Picture and Location-->Send"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.07">

                <RadioButton
                    android:id="@+id/Doesnt_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnRadioClick_Issue"
                    android:text="@string/something_doesnt_work" />

                <RadioButton
                    android:id="@+id/Too_slow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnRadioClick_Issue"
                    android:text="@string/something_is_too_slow" />

                <RadioButton
                    android:id="@+id/Other_Issues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnRadioClick_Issue"
                    android:text="@string/other_issues" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="393dp"
                android:layout_height="123dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editTextDescription1"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:ems="10"
                    android:hint="@string/describe_the_issue"
                    android:inputType="textMultiLine" />

                <ImageButton
                    android:id="@+id/imageButton"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="58dp"
                    android:layout_height="75dp"
                    android:layout_alignBottom="@+id/editTextDescription1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="11dp"
                    android:layout_weight="0.21"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:backgroundTint="@color/colorAccent"
                    android:cropToPadding="true"
                    android:elevation="1dp"
                    android:onClick="btnSpeech"
                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/presence_audio_online"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="Issue Description->Picture and Location-->Send"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                android:isIndicator="false"
                android:numStars="5" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/thank_you_for_the_information_please_click_on_the_send_button_below"
                android:textStyle="bold" />/>
        </LinearLayout>

    </ViewAnimator>

    <TextView
        android:id="@+id/mywidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/information"
        android:textColor="#ff4500" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/previous"
            android:visibility="invisible" />

        <Button
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/next" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="100dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="@string/Coordinates"
            android:textSize="30sp" />

    </RelativeLayout>


</LinearLayout>