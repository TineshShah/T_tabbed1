<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/tab1_layout"
    android:onClick="tab1myMethod">


        <EditText
            android:id="@+id/editTextAppname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Enter AppName"
            android:inputType="textMultiLine"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editTextDescription" />
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Description"
            android:inputType="textMultiLine"
            android:layout_below="@+id/editTextAppname"
            android:layout_alignStart="@+id/sharelocation" />
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="149dp"
        android:layout_height="202dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editTextDescription"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.02"
        android:text="Load Picture"
        android:onClick="LoadPic"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/imgView"
        android:layout_centerHorizontal="true" />

    <Switch
        android:id="@+id/sharelocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Share Location"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/buttonLoadPicture"
        android:layout_alignStart="@+id/editText4"
        android:onClick="switchOn"/>



    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/sharelocation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Coordinates: "
        android:textSize="30sp"
        android:id="@+id/textView1"
        android:layout_below="@+id/sharelocation"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btnSendTab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Something"
        android:text="@string/Send"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>

    </ScrollView>
